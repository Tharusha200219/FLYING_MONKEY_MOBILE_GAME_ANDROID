<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/howtoplaybackground"
    tools:context=".HowToPlayActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:\n\n1. Tap the screen to make the monkey move.\n\n2. Avoid the obstacles (red balls) to survive.\n\n3. Collect yellow and green balls to increase your score.\n\n4. You have three lives. Lose all lives and the game is over."
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_below="@id/instructionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
